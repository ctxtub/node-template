{
  "name": "node-template",
  "version": "2.1.0",
  "description": "A node-template build with mysql & redis & koa，logged by log4js. / 一个简易的nodejs框架，支持mysql、redis数据库，由koa提供路由分发，log4js日志记录",
  "main": "app.js",
  "scripts": {
    "dev": "CUSTOM_ENV=dev node ./app.js",
    "prod": "CUSTOM_ENV=prod node ./app.js",
    "pm2:dev": "pm2 startOrRestart pm2.config.js --env dev",
    "pm2:prod": "pm2 startOrRestart pm2.config.js"
  },
  "author": "ctx@outlook.com",
  "license": "ISC",
  "dependencies": {
    "axios": "^0.21.1",
    "ejs": "^2.7.1",
    "koa": "^2.10.0",
    "koa-bodyparser": "^4.2.1",
    "koa-mount": "^4.0.0",
    "koa-router": "^7.4.0",
    "koa-static": "^5.0.0",
    "koa-views": "^6.2.1",
    "log4js": "^5.3.0",
    "mysql": "^2.17.1",
    "redis": "^2.8.0"
  },
  "devDependencies": {
    "eslint": "^6.5.1",
    "eslint-config-standard": "^14.1.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-node": "^10.0.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1"
  }
